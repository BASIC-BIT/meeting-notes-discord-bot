# Required
DISCORD_CLIENT_ID="your-discord-client-id-here"
GITHUB_TOKEN="your-github-token-here"
AWS_TOKEN_KEY="your-aws-token-key-here"
environment="prod"                           # prod | staging
project_name="meeting-notes"
github_environment="sandbox"                 # GitHub Actions environment name

# Optional (leave blank to use defaults)
ENABLE_OAUTH="false"                          # defaults false
DISCORD_CALLBACK_URL=""                       # required if ENABLE_OAUTH=true
NODE_ENV="production"                         # recommended for ECS task
ENABLE_ONBOARDING="false"
OPENAI_ORGANIZATION_ID=""                     # optional
OPENAI_PROJECT_ID=""                          # optional
NOTES_MODEL="gpt-5.2"                         # optional; model for notes and summaries
LANGFUSE_BASE_URL=""                          # optional; set for self-hosted
LANGFUSE_TRACING_ENABLED="true"               # optional; set false to disable traces
LANGFUSE_TRACING_ENVIRONMENT="prod"
LANGFUSE_RELEASE=""
LANGFUSE_PROMPT_LABEL="production"
LANGFUSE_PROMPT_MEETING_SUMMARY="chronote-meeting-summary"
LANGFUSE_PROMPT_CACHE_TTL_MS="60000"
FRONTEND_BUCKET=""                            # auto-named if blank
FRONTEND_DOMAIN=""                            # no custom domain if blank
FRONTEND_CERT_ARN=""                          # only when FRONTEND_DOMAIN is set
API_DOMAIN=""                                 # e.g., api.chronote.gg (optional, enables ALB + DNS)
API_CERT_ARN=""                               # only when API_DOMAIN is set (ACM ARN in us-east-1)
TRANSCRIPTS_BUCKET=""                         # auto-named if blank
TRANSCRIPTS_PREFIX=""                         # no prefix if blank
HOSTED_ZONE_NAME=""                           # e.g., chronote.gg. (required if setting FRONTEND_DOMAIN)
# Frontend/CORS
FRONTEND_ALLOWED_ORIGINS=""                   # comma-separated origins, no trailing slash
FRONTEND_SITE_URL=""                          # primary frontend URL

# Live voice (optional)
LIVE_VOICE_MODE="off"                         # off | tts_gate
LIVE_VOICE_GATE_MODEL="gpt-5-mini"
LIVE_VOICE_RESPONDER_MODEL="gpt-4o-mini"
LIVE_VOICE_TTS_MODEL="gpt-4o-mini-tts"
LIVE_VOICE_TTS_VOICE="alloy"
LIVE_VOICE_WINDOW_SECONDS="90"
LIVE_VOICE_WINDOW_LINES="40"
LIVE_VOICE_PAST_MEETINGS_MAX="3"
LIVE_VOICE_PAST_MEETINGS_MAX_CHARS="400"
LIVE_VOICE_GATE_MAX_OUTPUT_TOKENS="256"
LIVE_VOICE_THINKING_CUE="true"
LIVE_VOICE_THINKING_CUE_INTERVAL_MS="500"

# Stripe (non-secret config; secrets are in AWS Secrets Manager)
STRIPE_MODE="test"
STRIPE_PRICE_BASIC=""                         # optional legacy fallback
STRIPE_PRICE_LOOKUP_BASIC_MONTHLY="chronote_basic_monthly"
STRIPE_PRICE_LOOKUP_BASIC_ANNUAL="chronote_basic_annual"
STRIPE_PRICE_LOOKUP_PRO_MONTHLY="chronote_pro_monthly"
STRIPE_PRICE_LOOKUP_PRO_ANNUAL="chronote_pro_annual"
STRIPE_SUCCESS_URL=""
STRIPE_CANCEL_URL=""
STRIPE_PORTAL_RETURN_URL=""
BILLING_LANDING_URL=""

# Observability (hosted AMG/AMP)
# Create a Grafana service account token (preferred) or AMG API key, then set these:
grafana_api_key=""
grafana_url=""
aws_region="us-east-1"
grafana_suffix_seed=""                       # optional; change to force a new workspace name suffix
# Secrets (managed in AWS Secrets Manager)
# After apply, set secret values for:
# - ${project_name}-${environment}/discord-bot-token
# - ${project_name}-${environment}/discord-client-secret
# - ${project_name}-${environment}/oauth-secret
# - ${project_name}-${environment}/openai-api-key
# - ${project_name}-${environment}/stripe-secret-key
# - ${project_name}-${environment}/stripe-webhook-secret
# - ${project_name}-${environment}/langfuse-public-key
# - ${project_name}-${environment}/langfuse-secret-key
