DISCORD_CLIENT_ID=your-bot-application-id-here
DISCORD_CLIENT_SECRET=your-bot-secret-here
DISCORD_CALLBACK_URL=http://localhost:3001/callback
DISCORD_BOT_TOKEN=your-bot-token-here
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION_ID=your-openai-organization-id-here
OPENAI_PROJECT_ID=your-openai-project-id-here
LIVE_VOICE_MODE=off               # off | tts_gate
LIVE_VOICE_GATE_MODEL=gpt-5-mini
LIVE_VOICE_RESPONDER_MODEL=gpt-4o-mini
LIVE_VOICE_TTS_MODEL=gpt-4o-mini-tts
LIVE_VOICE_TTS_VOICE=alloy
LIVE_VOICE_GATE_MAX_OUTPUT_TOKENS=256
LIVE_VOICE_THINKING_CUE=true
LIVE_VOICE_THINKING_CUE_INTERVAL_MS=500
ASK_MAX_MEETINGS=25
OAUTH_SECRET=your-oauth-secret-here

# Local Development Settings
NODE_ENV=development
USE_LOCAL_DYNAMODB=true

# Context and Memory Settings (with sensible defaults)
ENABLE_CONTEXT_MEMORY=true     # Default: true - Enable memory retrieval for meetings
MEMORY_DEPTH=5                  # Default: 5 - Number of past meetings to include in context
MAX_CONTEXT_LENGTH=30000        # Default: 30000 - Maximum characters for context in prompts
CONTEXT_TEST_MODE=false         # Default: false - Enables verbose context testing prompts

# Notes generation test settings
NOTES_LONG_STORY_TEST_MODE=false      # Default: false - Forces notes into an intentionally long story for embed splitting tests
NOTES_LONG_STORY_TARGET_CHARS=20000   # Default: 20000 - Target character count when long story test mode is enabled

# Transcript storage
TRANSCRIPTS_BUCKET=local-transcripts
TRANSCRIPTS_PREFIX=
AWS_REGION=us-east-1
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=admin12345
